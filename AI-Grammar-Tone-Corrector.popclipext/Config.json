{
  "name": "AI Grammar & Tone Corrector",
  "icon": "icon.svg",
  "identifier": "com.aigrammar.toncorrector",
  "description": "AI-powered grammar correction and tone adjustment using OpenAI ChatGPT and Google Gemini. Hold Shift (â‡§) to copy the response instead of pasting.",
  "note": "To use this extension you will need an <a href=\"https://platform.openai.com/account/api-keys\">OpenAI API key</a> and/or a <a href=\"https://makersuite.google.com/app/apikey\">Gemini API key</a>",
  "app": {
    "name": "AI Grammar & Tone Corrector",
    "link": "https://github.com"
  },
  "popclipVersion": 4069,
  "module": "ai-grammar-tone-corrector.js",
  "entitlements": [
    "network"
  ],
  "requirements": [
    "text"
  ],
  "options": [
    {
      "identifier": "openai_apikey",
      "label": "OpenAI API Key",
      "type": "string",
      "description": "Your OpenAI API key (starts with sk-)"
    },
    {
      "identifier": "gemini_apikey",
      "label": "Gemini API Key",
      "type": "string",
      "description": "Your Google Gemini API key"
    },
    {
      "identifier": "default_provider",
      "label": "Default AI Provider",
      "type": "multiple",
      "defaultValue": "Gemini",
      "description": "Choose the default AI provider",
      "values": [
        "OpenAI",
        "Gemini"
      ]
    },
    {
      "identifier": "openai_model",
      "label": "OpenAI Model",
      "type": "multiple",
      "defaultValue": "gpt-4o-mini",
      "description": "OpenAI model to use",
      "values": [
        "gpt-4o-mini",
        "gpt-4o",
        "gpt-4-turbo",
        "gpt-3.5-turbo"
      ]
    },
    {
      "identifier": "gemini_model",
      "label": "Gemini Model",
      "type": "multiple",
      "defaultValue": "gemini-3-pro-preview",
      "description": "Gemini model to use",
      "values": [
        "gemini-3-pro-preview",
        "gemini-2.5-pro",
        "gemini-2.5-flash"
      ]
    },
    {
      "identifier": "system_prompt",
      "label": "System Prompt",
      "type": "string",
      "defaultValue": "",
      "description": "System prompt. Leave empty to use the default 'English Guru' prompt."
    }
  ]
}